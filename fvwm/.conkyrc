conky.config = {

    alignment = "top_left" ,
    --是否嵌入桌面
    background=true,
    double_buffer=true,

    --是否绘制窗口边框
    draw_borders=false,
    draw_shades = false,
    draw_outline =false,
    draw_graph_borders = false,

    show_graph_scale = false,
    show_graph_range = false,

    --窗口边框
    border_width = 1,
    --#是否输出结果到终端，主要在判断Conky在哪里出错时使用，一般情况下为“no”即可。
    out_to_console = false,
    out_to_stderr = false,
    no_buffers = true,


    --#是否使用xft字体，一般为“yes”。
    use_xft = true,
    font =  "WenQuanYi Micro Hei:size=6" ,
    --xftfont = " WenQuanYi Micro Hei:size=6",
    --#overriggde_utf8_locale yes

    xftalpha = 0.8,
    --#更新时间单位秒
    update_interval =  1,

    double_buffer = true,

    --#自己的窗口
    own_window = true,
    own_window_class = 'Conky', 
    own_window_type = 'desktop',
    --#窗口完全透明
    own_window_transparent = true,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_argb_visual = true,
    --#own_window_argb_value改到255就是不透明。
    own_window_argb_value =  0,

    --#设定Conky的边界范围，最小宽度为280像素，最小高度为5像素
    --#minimum_size =  180 5,
    minimum_height = 180,
    minimum_width =  200,
    --#两条设定Conky输出范围距离屏幕边界的像素数量，最小为10像素。 
    gap_x  = 0,
    gap_y =  0,

    default_color =  "#CCCCCC",
    default_shade_color = "#000000",
    default_outline_color = "#000000",


    cpu_avg_samples =  2,
    net_avg_samples = 2,
    --# set to yes if you want all text to be in uppercase
    uppercase = false,

    color0  = "cyan",
    color1 =   "green",
    color2 =  "orange",
    color3  =   "#204A87",

    wangka = 'wlp3s0'
--${#00FF00}${font WenQuanYi Micro Hei:style=Bold:pixelsize=20}${alignc}${time %H:%M:%S}
--${font WenQuanYi Micro Hei:pixelsize=18}${alignc}${time %b%d日星期%a}${alignc}
}


conky.text = [[
${font Liberation Sans:style=Bold:size=8}DATE $stippled_hr${font}
${voffset -2}${color2}${font Liberation Sans:style=Bold:size=22}${time %H:%M:%S}${font}${color0} ${voffset -10}${alignr }${font WenQuanYi Micro Hei:size=12}${time %A}${font}
${color #8AE234}${hr 1}
${color #00FF00}${font WenQuanYi Micro Hei:size=12}${alignc}${time %Y年%b%d日}${font}
${color #FFFF00}${hr 2}
${font WenQuanYi Micro Hei:pixelsize=10}${color #00ffcf}主机名:${color #00ffcf} $alignr$nodename
${color #00ffcf}内核: ${color #00ffcf}$alignr$kernel
${color #00ffcf}机器: ${color #00ffcf}$alignr$machine
${color #00ffcf}已运行时间: ${color #00ffcf}$alignr$uptime
${color #FFFF00}${hr 1}
${color #ffd700}频率: ${alignr}${freq dyn} MHz
${font Microsoft YaHei:pixelsize=12}${color #00ff1e}CPU 0: ${cpu cpu0}% $alignr$acpitemp°C(T)
${color #dcff82}${cpubar 4 cpu0}
${color #00ff1e}CPU 1: ${cpu cpu0}%
${color #dcff82}${cpubar 8 cpu0}
${color #00ff1e}CPU 2: ${cpu cpu2}%
${color #dcff82}${cpubar 8 cpu2}
${color #00ff1e}CPU 3: ${cpu cpu3}%
${color #dcff82}${cpubar 8 cpu3}
--${color #00ff1e}CPU 4: ${cpu cpu4}%
--${color #dcff82}${cpubar 8 cpu4}
${color #00ff1e}CPU占用排名:$alignr CPU% MEM%
${color #FF0000} ${top name 1}$alignr${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2}$alignr${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3}$alignr${top cpu 3} ${top mem 3}
${color #FFFF00}${stippled_hr 2}$color
${font WenQuanYi Micro Hei:pixelsize=12}${color #00ff1e}RAM:$alignr${color #00FFFF}$mem/($memperc%)
${color #78af78}${membar 8}
${color #00ff1e}SWAP: $swap $alignr ${color #00FFFF}$swap/($swapperc%)
${color #78af78}${swapbar 8}
${color #00ff1e}内存占用排名: $alignr CPU%  MEM%
${color #FF0000} ${top_mem name 1}$alignr ${top_mem cpu 1}  ${top_mem mem 1}
${color lightgrey} ${top_mem name 2}$alignr ${top_mem cpu 2}  ${top_mem mem 2}
${color lightgrey} ${top_mem name 3}$alignr ${top_mem cpu 3}  ${top_mem mem 3}
${color #FFFF00}${hr 1}$color
${font WenQuanYi Micro Hei:pixelsize=12}${color #00ff1e}硬盘读取速度:${alignr}${diskio_read}
${color #00ff1e}硬盘写入速度:${alignr}${diskio_write}
${font WenQuanYi Micro Hei:pixelsize=12}${color #00ff1e}/ 分区: ${color}${alignr}${fs_used /}/ ${fs_size /}
${color #78af78}${fs_bar 8 /}
${color #00ff1e}/boot 分区: ${color}${alignr}${fs_used /boot}/ ${fs_size /boot}
${color #78af78}${fs_bar 8 /boot}
${color #00ff1e}/home 分区: ${color}${alignr}${fs_used /home}/ ${fs_size /home}
${color #78af78}${fs_bar 8 /home}
${color #FFFF00}${hr 1}$color
${font Microsoft YaHei:pixelsize=12}${color #00ff1e}网络 $alignr ${color #00ff1e}IP地址: ${color #DDAA00}${addr wlp3s0}
${voffset 1}${color #98c2c7} 上传: ${color #db7093}${upspeed wlp3s0}/s ${alignr}${color #98c2c7}总共: ${color #db7093}${totalup wlp3s0}
${voffset 1}${color #98c2c7} 下载: ${color #ddaa00}${downspeed wlp3s0}/s ${alignr}${color #98c2c7}总共: ${color #ddaa00}${totaldown wlp3s0}
--${font Microsoft YaHei:pixelsize=12}${color #FFFF00}${hr 2}
${color white}网络 ${hr 1}
下载 ${downspeed wlp3s0}/s ${alignr}上传 ${upspeed wlp3s0}/s
${downspeedgraph wlp3s0 25,80 #ff0000 #0000ff} ${alignr}${upspeedgraph wlp3s0 25,80 #ff0000 #0000ff}
Total ${totaldown wlp3s0} ${alignr}Total ${totalup wlp3s0}
${color white}磁盘 ${hr 1}${color yellow}
读 ${diskio_read}/s ${alignr}写 ${diskio_write}/s
${diskiograph_read /dev/sda 25,80 #ff0000 #0000ff} ${alignr}${diskiograph_read /dev/sda 25,80 #ff0000 #0000ff}

]]
