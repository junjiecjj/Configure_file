!xterm solarized_light 主题


xterm*termName: xterm-256color

XTerm*VT100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)

!mouse selecting to copy, ctrl-v to paste 快捷键定义：鼠标选择自动复制，ctrl-v粘贴，ctrl-p拷屏。
!Ctrl p to print screen content to file
XTerm*VT100.Translations: #override
    Ctrl <KeyPress> V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0)
    <BtnUp>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0)
    Ctrl <KeyPress> P: print()

XTerm*metaSendsEscape: true
Xterm*eightBitInput: false
XTerm*Font: 7*13

! English font
xterm*faceName:Noto mono:antialas=true:pixelsize=12
! Chinese font
xterm*faceNameDoublesize:WenQuanYi Micro Hei:antialias=True:pixelsize=13
!xterm*faceNameDoublesize:SimHei:size=36:antialias=True:pixelsize=36
xterm*xftAntialias:true
xterm*cjkWidth:false


xterm*faceSize:200

XTerm*locale:zh_CN.UTF-8
xterm*utf8:true
xterm*utf8Title:true

!窗口大小及位置
xterm*geometry:70x18+200+150

! scrollbar
XTerm*scrollBar:true
XTerm*rightScrollBar:true
XTerm*saveLines:  4096
XTerm*fastScroll:true

Xterm*bellIsUrgent: true
XTerm*allowBoldFonts: true



!input method  好像不起作用
XTerm*inputMethod:fcitx

!调整行距离
XTerm*scaleHeight: 1.01
!####################################################



